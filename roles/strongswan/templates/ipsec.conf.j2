# ipsec.conf - strongSwan IPsec configuration file

# basic configuration

config setup
    # strictcrlpolicy=yes
    # uniqueids = no


# Add connections here.

{% for host in play_hosts %}
{% if inventory_hostname != hostvars[host]['inventory_hostname'] %}

conn host-host {{ hostvars[host]['inventory_hostname'] }}
    leftcert={{ hostvars[host]['inventory_hostname'] }}-hostCert.pem
    right={{ hostvars[host]['physical_ip'] }}
    rightid="C=CH, O=VULTR-VPS-CENTOS, CN={{ hostvars[host]['inventory_hostname'] }}"
    auto=start

{% endif %}
{% endfor %}


